@{
    ViewData["Title"] = "Görüntü Kırpma";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Görüntü Kırpma</h2>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }
                    <form asp-controller="CropImage" asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="imageFile" class="form-label">Görsel Seçin</label>
                            <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*" required>
                            <div class="form-text">Desteklenen formatlar: JPG, PNG, GIF</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="x" class="form-label">X Koordinatı</label>
                                    <input type="number" class="form-control" id="x" name="x" value="0" min="0">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="y" class="form-label">Y Koordinatı</label>
                                    <input type="number" class="form-control" id="y" name="y" value="0" min="0">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="width" class="form-label">Genişlik</label>
                                    <input type="number" class="form-control" id="width" name="width" value="100" min="1">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="height" class="form-label">Yükseklik</label>
                                    <input type="number" class="form-control" id="height" name="height" value="100" min="1">
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Kırpma İşlemini Uygula</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 