@{
    ViewData["Title"] = "Görsel Yükle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Görsel Yükle</h2>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }
                    <form asp-controller="Image" asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="imageFile" class="form-label">Görsel Seçin</label>
                            <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*" required>
                            <div class="form-text">Desteklenen formatlar: JPG, PNG, GIF</div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Yükle ve Gri Tonlamaya Çevir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 