@{
    ViewData["Title"] = "İşlenmiş Görsel";
    var imagePath = $"/uploads/{TempData["ProcessedImage"]}";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Gri Tonlamalı Görsel</h2>
                </div>
                <div class="card-body text-center">
                    <img src="@imagePath" class="img-fluid rounded shadow" alt="Gri Tonlamalı Görsel">
                    <div class="mt-4">
                        <a asp-controller="Image" asp-action="Upload" class="btn btn-primary">Yeni Görsel Yükle</a>
                        <a href="@imagePath" class="btn btn-secondary" download>Görseli İndir</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 