@{
    ViewData["Title"] = "İkili (Binary) Dönüşüm";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">İkili (Binary) Dönüşüm</h2>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }
                    <form asp-controller="BinaryImage" asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="imageFile" class="form-label">Görsel Seçin</label>
                            <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*" required>
                            <div class="form-text">Desteklenen formatlar: JPG, PNG, GIF</div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="threshold" class="form-label">Eşik Değeri (0-255)</label>
                            <input type="range" class="form-range" id="threshold" name="threshold" min="0" max="255" value="128" oninput="thresholdValue.value = threshold.value">
                            <output id="thresholdValue">128</output>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">İkili Dönüşüm Uygula</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 