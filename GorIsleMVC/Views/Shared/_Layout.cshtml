<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GÖRİŞLE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-nav {
            flex-wrap: wrap;
        }
        .nav-item {
            margin: 2px 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">GÖRİŞLE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Temel İşlemler -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="basicOperationsDropdown" role="button" data-bs-toggle="dropdown">
                                Temel İşlemler
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="GrayImage" asp-action="Upload">Gri Tonlama</a></li>
                                <li><a class="dropdown-item" asp-controller="BinaryImage" asp-action="Upload">İkili Dönüşüm</a></li>
                                <li><a class="dropdown-item" asp-controller="RotateImage" asp-action="Upload">Görüntü Döndürme</a></li>
                                <li><a class="dropdown-item" asp-controller="CropImage" asp-action="Upload">Görüntü Kırpma</a></li>
                                <li><a class="dropdown-item" asp-controller="ZoomImage" asp-action="Upload">Yakınlaştırma</a></li>
                                <li><a class="dropdown-item" asp-controller="ColorSpace" asp-action="Index">Renk Uzayı</a></li>
                            </ul>
                        </li>

                        <!-- Histogram ve Kontrast -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="histogramDropdown" role="button" data-bs-toggle="dropdown">
                                Histogram ve Kontrast
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Histogram" asp-action="Index">Histogram</a></li>
                                <li><a class="dropdown-item" asp-controller="Arithmetic" asp-action="Index">Aritmetik</a></li>
                                <li><a class="dropdown-item" asp-controller="Contrast" asp-action="Index">Kontrast</a></li>
                            </ul>
                        </li>

                        <!-- Filtreleme ve Kenar Bulma -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="filteringDropdown" role="button" data-bs-toggle="dropdown">
                                Filtreleme ve Kenar
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Convolution" asp-action="Index">Mean Filter</a></li>
                                <li><a class="dropdown-item" asp-controller="Prewitt" asp-action="Index">Prewitt Kenar</a></li>
                                <li><a class="dropdown-item" asp-controller="Unsharp" asp-action="Index">Unsharp Masking</a></li>
                            </ul>
                        </li>

                        <!-- Eşikleme ve Gürültü -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="thresholdingDropdown" role="button" data-bs-toggle="dropdown">
                                Eşikleme ve Gürültü
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Threshold" asp-action="Index">Eşikleme</a></li>
                                <li><a class="dropdown-item" asp-controller="Noise" asp-action="Index">Gürültü</a></li>
                            </ul>
                        </li>

                        <!-- Morfolojik İşlemler -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="morphologyDropdown" role="button" data-bs-toggle="dropdown">
                                Morfolojik İşlemler
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Morphology" asp-action="Index">Genişleme ve Aşınma</a></li>
                                <li><a class="dropdown-item" asp-controller="Morphology" asp-action="Index">Açma ve Kapama</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Görsel İşleme
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
