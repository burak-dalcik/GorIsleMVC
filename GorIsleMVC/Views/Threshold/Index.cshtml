@{
    ViewData["Title"] = "Eşikleme İşlemleri";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Eşikleme İşlemleri</h2>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    <ul class="nav nav-tabs mb-4" id="thresholdTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="manual-tab" data-bs-toggle="tab" data-bs-target="#manual" type="button" role="tab">
                                Manuel Eşikleme
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="otsu-tab" data-bs-toggle="tab" data-bs-target="#otsu" type="button" role="tab">
                                Otsu Eşikleme
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content" id="thresholdTabContent">
                        <div class="tab-pane fade show active" id="manual" role="tabpanel">
                            <form asp-action="ApplyThreshold" method="post" enctype="multipart/form-data">
                                <div class="form-group mb-4">
                                    <label for="imageFile" class="form-label">Görsel Seçin</label>
                                    <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*" required>
                                    <div class="form-text">Desteklenen formatlar: PNG, JPG, GIF</div>
                                </div>

                                <div class="form-group mb-4">
                                    <label for="threshold" class="form-label d-flex justify-content-between">
                                        <span>Eşik Değeri</span>
                                        <span id="thresholdValue" class="badge bg-primary">128</span>
                                    </label>
                                    <input type="range" 
                                           class="form-range" 
                                           id="threshold" 
                                           name="threshold" 
                                           min="0" 
                                           max="255" 
                                           step="1" 
                                           value="128"
                                           oninput="updateThresholdValue(this.value)">
                                    <div class="d-flex justify-content-between">
                                        <small>0 (Siyah)</small>
                                        <small>255 (Beyaz)</small>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">
                                        Manuel Eşikleme Uygula
                                    </button>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="otsu" role="tabpanel">
                            <form asp-action="ApplyOtsuThreshold" method="post" enctype="multipart/form-data">
                                <div class="form-group mb-4">
                                    <label for="imageFileOtsu" class="form-label">Görsel Seçin</label>
                                    <input type="file" class="form-control" id="imageFileOtsu" name="imageFile" accept="image/*" required>
                                    <div class="form-text">Desteklenen formatlar: PNG, JPG, GIF</div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">
                                        Otsu Eşikleme Uygula
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h3>Eşikleme İşlemleri Hakkında</h3>
                </div>
                <div class="card-body">
                    <h4>Manuel Eşikleme</h4>
                    <p>Manuel eşikleme, belirlediğiniz bir eşik değerine göre görüntüyü ikili (siyah-beyaz) formata dönüştürür:</p>
                    <ul>
                        <li>Piksel değeri eşik değerinden küçükse: Siyah (0)</li>
                        <li>Piksel değeri eşik değerinden büyük veya eşitse: Beyaz (255)</li>
                    </ul>

                    <h4 class="mt-3">Otsu Eşikleme</h4>
                    <p>Otsu eşikleme, görüntünün histogramını analiz ederek optimal eşik değerini otomatik olarak belirler:</p>
                    <ul>
                        <li>Sınıflar arası varyansı maksimize eder</li>
                        <li>Manuel eşik seçimine gerek kalmaz</li>
                        <li>Özellikle iki modlu histogramlarda etkilidir</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateThresholdValue(value) {
            document.getElementById('thresholdValue').textContent = value;
        }
    </script>
} 